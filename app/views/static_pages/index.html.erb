<h1>Home page</h1>



<div>
    <%= form_tag(root_url, method: 'get') do %>
    <p>
      <%= label_tag "Enter Flickr User ID:" %>
      <%= text_field_tag :user_id %>
    </p>
    <%= submit_tag "Find photos", class: 'btn' %>
    <% end %>
</div>

  <% if @user %>
<div style="float: right">
    <% cache ("flickr_sidebar") do %>
    <%= render_flickr_sidebar_widget("#{@user}") %>
    <% end %>
</div>
  <% end %>


